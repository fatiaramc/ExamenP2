@{
	ViewBag.Title = "Signup";
}
<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
<div class="materialContainer">

	<div class="box">

		<div class="title">SIGNUP</div>

		<div class="input">
			<input type="text" placeholder="Username" name="name" id="name">
			<span class="spin"></span>
		</div>

		<div class="input">
			<input type="text" placeholder="Email" name="regemail" id="regemail">
			<span class="spin"></span>
		</div>

		<div class="input">
			<input type="password" placeholder="Password" name="pass" id="pass">
			<span class="spin"></span>
		</div>

		<div class="button login">
			<button><span>GO</span> <i class="fa fa-check"></i></button>
		</div>

		<div class="box" style="padding:unset; position:center; align-self: center">
			<a href="" class="pass-forgot">@Html.ActionLink("Already have an account? Log in", "Index")</a>
		</div>

	</div>
</div>